@using Microsoft.AspNet.Identity

@{
        byte[] avatar = GetShip.Models.Galery.Current_Avatar();
        if (avatar != null)
        {
            <img src="data:image;base64,@System.Convert.ToBase64String(avatar)" class="img-circle" style="width:70px"/>   
        }
        else
        {
            <img src="https://www.ioa.uni-bonn.de/studiengangsmanagement/mentoren/avatar-1577909-960-720.png" class="img-circle" style="width:70px"/>
        }
}

@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
@Html.AntiForgeryToken();

<ul class="nav navbar-nav navbar-right">
   <li>
       @*<img src="data:image;base64,@System.Convert.ToBase64String(avatar)" class="img-circle" />*@
   </li>
    <li>
        @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
</ul>
}